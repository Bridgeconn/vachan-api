{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/app.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "uniqueItems":true,
          "minLength": 2,
          "title": "App Name",
          "type": "string"
        },
        "organization": {
          "minLength": 2,
          "title": "Organization Name",
          "type": "string"
        },
        "contacts": {
          "type": "object",
          "properties": {
            "email": {
              "title": "email address",
              "type": "string"
            },
            "phone": {
              "title": "phone number",
              "type": "string"
            }
          }
        }
      },
      "required": [
        "email","name","organization"
      ],
      "additionalProperties": false
    }
  }
}
